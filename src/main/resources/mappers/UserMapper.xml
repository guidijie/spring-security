<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jie.dao.UserDao">

    <resultMap id="userMap" type="com.jie.pojo.User">
        <id column="id" property="id"/>
        <collection property="roles" column="id" select="com.jie.dao.RoleDao.findRolesByUserId"/>
    </resultMap>

    <select id="findUserByUsername" parameterType="string" resultMap="userMap">
        select u.* from t_user u where u.username = #{username}
    </select>

</mapper>
